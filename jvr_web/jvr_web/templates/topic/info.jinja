{% extends 'base.jinja' %}

{% import 'macros.jinja' as helpers %}


{% block page_header %}
  {% block title %}Topic info '{{ topic_name }}'{% endblock %}
{% endblock %}

{% block content %}
<h2>Publishers (nodes)</h2>
{% if publishers %}
  <ul>
  {% for p in publishers %}
    {# <li>{{ p.node_name }}</li>
    <li>**{{ helpers.full_node_name(p.node_name, p.node_namespace) }}</li> #}
    {% set href = url_for('node.info', node_name=p.node_name, namespace=p.node_namespace) %}
    <li><a href="{{ href }}">{{ helpers.full_node_name(p.node_name, p.node_namespace) }}</a></li>
  {% endfor %}
  </ul>
{% else %}
  No publishers found.
{% endif %}

<h2>Subscriptions (nodes)</h2>
{% if subscriptions %}
  <ul>
  {% for p in subscriptions %}
    <li>{{ p.node_name }}</li>
  {% endfor %}
  </ul>
{% else %}
  No publishers found.
{% endif %}

{% endblock %}
 