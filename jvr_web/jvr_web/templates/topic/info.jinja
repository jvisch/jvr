{% extends 'base.jinja' %}

{% import 'macro.jinja' %}


{% block page_header %}
  {% block title %}Topic info '{{ topic_name }}'{% endblock %}
{% endblock %}

{% block content %}
<h2>Publishers (nodes)</h2>
{% helper.full_node_name('a','b')%}
{% if publishers %}
  <ul>
  {% for p in publishers %}
  {# {% set href = url_for('node.info', node_name=name, namespace=namespace) %}
    <li><a href="{{ href }}">{% if namespace %}/{{ namespace }}{% endif %}/{{ name }}</a></li> #}
    <li>full_node_name(p.node_name, )  ::{{ p.node_name }}</li>
  {% endfor %}
  </ul>
{% else %}
  No publishers found.
{% endif %}

<h2>Subscriptions (nodes)</h2>
{% if subscriptions %}
  <ul>
  {% for p in subscriptions %}
    <li>{{ p.node_name }}</li>
  {% endfor %}
  </ul>
{% else %}
  No publishers found.
{% endif %}

{% endblock %}
 