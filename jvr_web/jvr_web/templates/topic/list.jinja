{% extends 'base.jinja' %}

{% block page_header %}
  {% block title %}Topics{% endblock %}
{% endblock %}

{% block content %}
<ul>
  {% for topic_name, topic_types in topics  %}
  <li>
    {{ topic_name }}
    <ul>
    {% for type in topic_types %}
    <li>{{ type }}</li>
    {% endfor %}
    </ul>
  </li>
  {% else %}
    No topics found.
  {% endfor %}
</ul>
{% endblock %}
